    { "name": "Ban/Unban User", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/ban-user", "body": { "mode": "raw", "raw": "{\"userId\":\"USER_ID\"}" } } },
    { "name": "Get Merchants", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/merchants" } },
    { "name": "Ban/Unban Merchant", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/ban-merchant", "body": { "mode": "raw", "raw": "{\"merchantId\":\"MERCHANT_ID\"}" } } },
    { "name": "Get Deals", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/deals" } },
    { "name": "Moderate Deal", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/deals/DEAL_ID/moderate" } },
