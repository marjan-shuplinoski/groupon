{
  "info": {
    "name": "Groupon Admin APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    { "name": "Login", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/login", "body": { "mode": "raw", "raw": "{\"email\":\"admin@example.com\",\"password\":\"123456\"}", "options": { "raw": { "language": "json" } } } } },
    { "name": "Get Users", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/users", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } },
    { "name": "Ban/Unban User", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/ban-user", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }], "body": { "mode": "raw", "raw": "{\"userId\":\"USER_ID\"}", "options": { "raw": { "language": "json" } } } } },
    { "name": "Ban/Unban User by ID", "request": { "method": "PATCH", "url": "{{baseUrl}}/api/admin/users/USER_ID/ban", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } },
    { "name": "Get Merchants", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/merchants", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } },
    { "name": "Ban/Unban Merchant", "request": { "method": "POST", "url": "{{baseUrl}}/api/admin/ban-merchant", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }], "body": { "mode": "raw", "raw": "{\"merchantId\":\"MERCHANT_ID\"}", "options": { "raw": { "language": "json" } } } } },
    { "name": "Ban/Unban Merchant by ID", "request": { "method": "PATCH", "url": "{{baseUrl}}/api/admin/merchants/MERCHANT_ID/ban", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } },
    { "name": "Get Deals", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/deals", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } },
    { "name": "Moderate Deal", "request": { "method": "PATCH", "url": "{{baseUrl}}/api/admin/deals/DEAL_ID/moderate", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }], "body": { "mode": "raw", "raw": "{\"status\":\"draft\"}", "options": { "raw": { "language": "json" } } } } },
    { "name": "Get Stats", "request": { "method": "GET", "url": "{{baseUrl}}/api/admin/stats", "header": [{ "key": "Authorization", "value": "Bearer {{adminToken}}" }] } }
  ]
}
